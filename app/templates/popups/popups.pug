  //- language select
  .popup#popupLangSelect
    .popup__header
      h4.popup__header-name Змінити мову чату
      button.popup__close
        i.ico &#x4d;
    .popup__body
      form#langswitch(name="langswitch")
        label.popup__label
          input(type="radio" name="lang" value="ukr")
          i.ico &#x5c;
          i.ico &#x5b;
          .popup__divider
          img(src="../img/ukraine.png")
          span українська
        label.popup__label
          input(type="radio" name="lang" value="eng")
          i.ico &#x5c;
          i.ico &#x5b;
          .popup__divider
          img(src="../img/united_kingdom.png")
          span english
    .popup__footer
      button(type="submit" form="langswitch").popup__btn так
      button(type="button" data-role="resetPopup").popup__btn скасувати

  //- color thema select
  .popup#popupThemaSelect
    .popup__header
      h4.popup__header-name Вибрати тему чату
      button.popup__close
        i.ico &#x4d;
    .popup__body
      form#langswitch(name="langswitch")
        label.popup__label
          input(type="radio" name="thema" value="default")
          i.ico &#x5c;
          i.ico &#x5b;
          .popup__divider
          span за замовчуванням
        label.popup__label
          input(type="radio" name="thema" value="dark")
          i.ico &#x5c;
          i.ico &#x5b;
          .popup__divider
          span dark
    .popup__footer
      button(type="submit" form="langswitch").popup__btn так
      button(type="button" data-role="resetPopup").popup__btn скасувати

  //- password change
  .popup.popup_password#popupChangePass
    .popup__header
      h4.popup__header-name Змінити пароль
      button.popup__close
        i.ico &#x4d;
    .popup__body
      form#changePass(name="changePass")
        .popup__text Введіть старий пароль
        .popup__pass-wrapper.popup__pass-wrapper_hidden
          input#changePass_old(type="password" name="oldPass")
          i.ico &#x7e;
          i.ico &#xe000;
        .popup__text Введіть новий пароль
        .popup__pass-wrapper.popup__pass-wrapper_hidden
          input#changePass_new(type="password")
          i.ico &#x7e;
          i.ico &#xe000;
        .popup__text Повторіть новий пароль
        .popup__pass-wrapper.popup__pass-wrapper_hidden
          input#changePass_repeat(type="password" name="newPass")
          i.ico &#x7e;
          i.ico &#xe000;
    .popup__messages-area
      .popup__message.popup__message_error
        i.ico &#x73;
        span Старий пароль не коректний
      .popup__message.popup__message_error
        i.ico &#x73;
        span Новий пароль повинен бути не менше 6 знаків
      .popup__message.popup__message_error
        i.ico &#x73;
        span Паролі не співпадають
      .popup__message.popup__message_error
        i.ico &#x73;
        span Серверна помилка. Спробуйте ще раз пізніше.
    .popup__footer
      button(type="submit" form="changePass").popup__btn так
      button(type="button" data-role="resetPopup").popup__btn скасувати

  //- name change
