      button.popup__close
        i.ico &#x4d;
    .popup__body
      form#changeUserNameForm
        .popup__text Введіть нове ім'я
        input(type="text" name="name")
    .popup__messages-area
      .popup__message.popup__message_error
        i.ico &#x73;
        span Ім'я повинно бути щонайменше 3 символи
      .popup__message.popup__message_error
        i.ico &#x73;
        span Дане ім'я зайняте
      .popup__message.popup__message_error
        i.ico &#x73;
        span Серверна помилка. Спробуйте ще раз пізніше.
    .popup__footer
      button(type="submit" form="changeUserNameForm").popup__btn так
      button(type="button" data-role="resetPopup").popup__btn скасувати

  //- avatar change
  .popup#popupChangeAva
    .popup__header
      h4.popup__header-name Зміна аватарки
      button.popup__close
        i.ico &#x4d;
    .popup__body
      form#changeUserAvaForm
        //(enctype="multipart/form-data")
        .popup__text Виберіть нове зображення для аватарки
        input(type="file" name="ava")
    .popup__messages-area
      .popup__message.popup__message_error
        i.ico &#x73;
        span Виберіть картинку
      .popup__message.popup__message_error
        i.ico &#x73;
        span Не коректний тип файлу. Картинка повинна бути у форматі jpg, jpeg або png
      .popup__message.popup__message_error
        i.ico &#x73;
        span Завеликий розмір файлу. Картинка повинна бути меншою за 5 мегабайт
    .popup__footer
      button(type="submit" form="changeUserAvaForm").popup__btn так
      button(type="button" data-role="resetPopup").popup__btn скасувати

  //- group chat
  .popup.popup_search#popupGroupChat
    .popup__header
      h4.popup__header-name Створити новий чат
      button.popup__close
        i.ico &#x4d;
    .popup__body
      .popup__col-wrapper
        .popup__col
          .popup__text Введіть назву чату
          input(type="text" name="groupName")
          .popup__text Список учасників
          .popup__list-wrapper.wjs-scroll(data-scroll='right' data-scroll-hidden='horizontal')
            .wjs-scroll__content-wrapper
              .wjs-scroll__content
                ul.popup__list#memberslist
                  li.popup__item
                    label
                      input(type="checkbox" checked)
                      i.ico.check &#x5a;
                      i.ico.uncheck &#x56;
                      span Вася Пупкін
                      span (@WEORI75MoBvQOhNq)
        .popup__col
          .popup__text пошук по id
          .popup__search-wrapper
            input(type="text" name="id")
            i.ico &#x55;
            .popup__search-result
              label
                input(type="checkbox")
                i.ico.check &#x5a;
                i.ico.uncheck &#x56;
                span Вася Пупкін
                span (@WEORI75MoBvQOhNq)
          .popup__text Вибрати з контактів
          .popup__list-wrapper.wjs-scroll(data-scroll='right'  data-scroll-hidden='horizontal')
            .wjs-scroll__content-wrapper
              .wjs-scroll__content
                ul.popup__list#contactslist
                  li.popup__item
                    label
                      input(type="checkbox")
                      i.ico.check &#x5a;
                      i.ico.uncheck &#x56;
                      span Вася Пупкін
                      span (@WEORI75MoBvQOhNq)
    .popup__footer
      button(type="submit").popup__btn так
      button(type="button" data-role="resetPopup").popup__btn скасувати

