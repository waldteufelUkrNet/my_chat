-
  let shortName;
  if (username) {
    shortName = username.toUpperCase().slice(0,2);
  } else {
    shortName = 'UN';
  }

  let url = avaUrl || '';

header.header
  button(type="button" data-target-group="aside" data-target="menu").header__menu-btn.header__menu-btn_primary
    i.ico(style='font-size: 30px') &#x61;
  .header__info
    .logo
      p.logo__name #{shortName}
      img.logo__img(src='' + url +'')
    .header__text-wrapper
      h1.header__header #{username}
      h4.header__subheader @#{id}
  input(type="text").header__search
  .header__search-results-wrapper
    
  button(type="button").header__menu-btn.header__menu-btn_secondary
    i.ico(style='font-size: 25px') &#x55;